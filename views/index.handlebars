<div class="search-wrap">
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="searchArea">
        <div class="container">

            <div class="row justify-content-center">
                <div class="landing-inner content-div ">

                    <h1 class="text-center">TRAVELIO</h1>
                    <form class="form-inline" id="search-form">
                        <select class="form-control mb-2 mr-sm-2" name="hotelLocation" placeholder="e.g. San Francisco"
                            id="hotel_location">
                            {{!-- <option selected></option> --}}
                            <option>Dallas</option>
                            <option>Las Vegas</option>
                            <option>New York</option>
                            <option>San Francisco</option>
                            <option>Los Angeles</option>
                        </select>


                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Check-in</div>
                            </div>
                            <input type="date" class="form-control" name="checkIn" id="check_in" placeholder="Check-in">
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Check-out</div>
                            </div>
                            <input type="date" class="form-control" name="checkout" id="check_out"
                                placeholder="Check-out">
                        </div>



                        <select class="form-control mb-2 mr-sm-2" id="persons-per-room">
                            <option>One-person room</option>
                            <option>Two-person room</option>
                            <option>Family room</option>
                        </select>
                        <button type="submit" class="btn btn-secondary btn-lg ">Search</button>
                    </form>

                </div>

            </div>
            <div class="row justify-content-center" id='search-flights'>

                {{!-- <button type="submit" class="btn btn-primary btn-lg ">Search</button> --}}
            </div>
        </div>

    </section>
</div>