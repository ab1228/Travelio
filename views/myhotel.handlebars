<div class="bg-light justfy-content-center">

    <div class="container">
        <div class="py-5 text-center">

            <h2>My Hotel</h2>

        </div>

        <div class="row" id="book_room">

            <div class="col-md-12  justify-content-center">

                <form class="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="example-tel-input" class="col-2 col-form-label">Telephone</label>

                            <input class="form-control" type="tel" placeholder="1-(555)-555-5555" id="tel-input">
                            <div class="invalid-feedback">
                                Please enter a valid phone number.
                            </div>
                        </div>


                        <div class="col-md-6 mb-3">
                            <label for="email">Email <span class="text-muted"></label>
                            <input type="email" class="form-control" id="email" placeholder="abc123@hotmail.com">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="example-tel-input" class="col-2 col-form-label">Date of Birth</label>

                            <input class="form-control" type="date" id="date_of_birth">
                            <div class="invalid-feedback">
                                Please enter a valid phone number.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="example-tel-input" class="col-2 col-form-label">Date of Birth</label>

                            <input class="form-control" type="text-muted" id="ref-number">
                            <div class="invalid-feedback">
                                Please enter a valid reference number.
                            </div>
                        </div>



                        <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>

                    </div>


                </form>
            </div>
        </div>